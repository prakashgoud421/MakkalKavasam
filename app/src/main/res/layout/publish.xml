<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:hint="Type your content here"
        android:padding="10dp"
        android:gravity="top"
        android:id="@+id/edtText"
        android:layout_above="@+id/rl"
        android:background="@drawable/edittext_bg"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/signIn"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_alignParentStart="true"
            android:layout_width="50dp"
            android:background="@mipmap/youtube"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/textView"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Add your video here"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/buttonChoose"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:background="@drawable/videoaddone"
            android:id="@+id/buttonChoose" />

    </RelativeLayout>


    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/signIn"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginRight="60dp"
        android:layout_alignParentBottom="true"
        android:text="PUBLISH"
        android:textSize="17dp"
        android:background="@drawable/bg_dialog"
        android:layout_height="50dp" />




</RelativeLayout>
</LinearLayout>