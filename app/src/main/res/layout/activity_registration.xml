<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/back"
            android:background="@mipmap/ic_arrow_left_white_24dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>



    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/edt_username"
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="First Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />

    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/edt_lastname"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edt_username"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="Last Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />

    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/mobile"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edt_lastname"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="Mobile"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />
    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mobile"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="Password"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />
    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/conf_password"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/password"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="Confirm Password"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />

    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/conf_password"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="Email"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />

    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="Address"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />

    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/city"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/address"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="City"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />
    <kavasam.makkal.com.mkkalkavasam.CleanableEditText
        android:id="@+id/state"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/city"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/icon_color"
        android:gravity="left|center"
        android:hint="State"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/edt_color"
        android:textColorHint="@color/edt_color"
        android:textSize="12sp"
        android:maxLength="50" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/state"
        android:layout_width="fill_parent"
        android:id="@+id/signIn"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginRight="60dp"
        android:text="Register"
        android:textSize="17dp"
        android:background="@drawable/bg_dialog"
        android:layout_height="50dp" />

</RelativeLayout>